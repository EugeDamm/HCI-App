<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Alarm"
    android:id="@+id/alarm"
    tools:locale="es">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="@string/home_mode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/home_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="28dp"
                android:checked="false"
                android:theme="@style/SwitchTheme"
                app:layout_constraintBottom_toBottomOf="@+id/home_mode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_mode"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/out_home_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="132dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="@string/out_home_mode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/out_home_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="28dp"
                android:checked="false"
                android:theme="@style/SwitchTheme"
                app:layout_constraintBottom_toBottomOf="@+id/out_home_mode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/out_home_mode"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="241dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="#E09BF5"
                android:text="@string/change_password"
                android:textColor="#FFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/out_home_mode" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</FrameLayout>