<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/noWifiImage"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:contentDescription="@string/no_connection_image"
        app:layout_constraintBottom_toTopOf="@+id/noInternetConnectionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_signal_wifi_off" />

    <TextView
        android:id="@+id/noInternetConnectionText"
        android:layout_width="319dp"
        android:layout_height="89dp"
        android:layout_marginTop="290dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/no_internet_connection"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>